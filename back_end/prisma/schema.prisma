generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("TEST_DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  createdat     DateTime        @default(now())
  fullname      String
  email         String          @unique
  passwordhash  String
  WeightEntries WeightEntries[]
}

model WeightEntries {
  id        Int      @id @default(autoincrement())
  owner     User     @relation(fields: [ownerid], references: [id])
  ownerid   Int
  createdat DateTime @default(now())
  weight    Decimal
  notes     String
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresat DateTime
}
